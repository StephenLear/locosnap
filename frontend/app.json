{
  "expo": {
    "name": "LocoSnap",
    "slug": "locosnap",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "locosnap",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0f1a"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.locosnap.app",
      "infoPlist": {
        "NSCameraUsageDescription": "LocoSnap needs camera access to take photos of trains for identification.",
        "NSPhotoLibraryUsageDescription": "LocoSnap needs photo library access to select train photos for identification."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a0f1a"
      },
      "package": "com.locosnap.app",
      "permissions": ["CAMERA", "READ_EXTERNAL_STORAGE"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow LocoSnap to access your camera to identify trains."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow LocoSnap to access your photos to identify trains."
        }
      ]
    ]
  }
}
